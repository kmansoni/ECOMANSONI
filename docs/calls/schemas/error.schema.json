{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://mansoni.com/schemas/ws/error.schema.json",
  "title": "Mansoni WS Error",
  "type": "object",
  "additionalProperties": false,
  "required": ["code", "message"],
  "properties": {
    "code": {
      "type": "string",
      "enum": [
        "UNAUTHENTICATED",
        "UNAUTHORIZED",
        "VALIDATION_FAILED",
        "RATE_LIMITED",
        "ROOM_NOT_FOUND",
        "ROOM_CLOSED",
        "E2EE_REQUIRED_UNSUPPORTED",
        "E2EE_KEY_SYNC_FAILED",
        "SFU_NODE_UNAVAILABLE",
        "TRANSPORT_NOT_FOUND",
        "PRODUCER_NOT_FOUND",
        "CONSUME_NOT_ALLOWED",
        "SEQ_OUT_OF_ORDER",
        "DUPLICATE_MSG",
        "INTERNAL"
      ]
    },
    "message": { "type": "string", "minLength": 1, "maxLength": 500 },
    "details": { "type": "object" },
    "retryable": { "type": "boolean" }
  }
}
