{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://mansoni.com/schemas/ws/HELLO.schema.json",
  "title": "HELLO",
  "type": "object",
  "additionalProperties": false,
  "required": ["client", "resume"],
  "properties": {
    "client": {
      "type": "object",
      "additionalProperties": false,
      "required": ["platform", "appVersion", "deviceId"],
      "properties": {
        "platform": { "type": "string", "enum": ["web", "android", "ios"] },
        "appVersion": { "type": "string", "minLength": 1, "maxLength": 32 },
        "deviceId": { "$ref": "https://mansoni.com/schemas/ws/types.schema.json#/properties/deviceId" },
        "build": { "type": "string", "maxLength": 64 },
        "locale": { "type": "string", "maxLength": 16 }
      }
    },
    "resume": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "resumeToken": { "type": "string", "maxLength": 2048 },
        "lastServerSeqSeen": { "type": "integer", "minimum": 0 }
      }
    }
  }
}
