{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "mansoni://contracts/trend-item.v1",
  "title": "Trend Item v1",
  "type": "object",
  "additionalProperties": false,
  "required": ["trend_id", "type", "score", "window", "generated_at"],
  "properties": {
    "trend_id": { "type": "string", "minLength": 1 },
    "type": { "type": "string", "enum": ["hashtag", "audio", "reel"] },
    "subject_id": { "type": ["string", "null"] },
    "score": { "type": "number" },
    "window": { "type": "string", "enum": ["1h", "6h", "24h"] },
    "generated_at": { "type": "string", "format": "date-time" },
    "flags": {
      "type": "array",
      "items": { "type": "string", "pattern": "^(mod|abuse|rank)\\.[a-z0-9_]+$" }
    }
  }
}
