{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "mansoni://contracts/moderation-decision.v1",
  "title": "Moderation Decision v1",
  "type": "object",
  "additionalProperties": false,
  "required": ["content_id", "decision", "reason_code", "decided_by", "decided_at"],
  "properties": {
    "content_id": { "type": "string", "minLength": 1 },
    "decision": { "type": "string", "enum": ["allow", "restrict", "needs_review", "block"] },
    "reason_code": { "type": "string", "pattern": "^mod\\.[a-z0-9_]+$" },
    "decided_by": { "type": "string", "minLength": 1 },
    "decided_at": { "type": "string", "format": "date-time" },
    "notes": { "type": ["string", "null"], "maxLength": 2000 }
  }
}
